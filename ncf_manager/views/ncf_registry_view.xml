<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_ncf_registry_view_form" model="ir.ui.view">
        <field name="name">account.ncf.registry.form</field>
        <field name="model">account.ncf.registry</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="2">
                        <field name="name"/>
                        <field name="prefix"/>
                        <field name="company_id" readonly="1"/>
                        <!-- <field name="special_fiscal_position_id"/> -->
                    </group>
                    <field name="date_range_ids" options="{'no_quick_create':True, 'no_create_edit': True, 'delete': False}">
                        <tree string="Sequences" editable="false" delete="false">
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="number_next_actual"/>
                            <field name="max_number_next"/>
                            <field name="sale_fiscal_type"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="account_ncf_registry_action" model="ir.actions.act_window">
        <field name="name">NCF</field>
        <field name="res_model">ir.sequence</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="views">[("form", "account_ncf_registry_view_form")]</field>
        <field name="view_id" ref="account_ncf_registry_view_form"/>
        <field name="res_id" ref="seq_ncf_registry"/>
    </record>

    <menuitem id="account_ncf_registry_menu"
        action="account_ncf_registry_action"
        parent="account.account_account_menu"
        groups="account.group_account_manager"/>
</odoo>
